{
    "compilerOptions": {
      "lib": ["ES2022"],
      "target": "ES2022",
      "module": "esnext",
      "moduleResolution": "bundler",
      "outDir": "./dist/",
      "declarationDir": "./dist/types",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "checkJs": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true
    },
    "files": ["./src/index.ts"]
  }